<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th><%= t '.title'%></th>
      <th><%= t '.content'%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to (t '.show'), post %></td>
       <%if logged_in? && post.user_id == current_user.id %>
        <td><%= link_to (t '.edit'), edit_post_path(post) %></td>
        <td><%= link_to (t '.destroy'), post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to (t '.new post'), new_post_path %>
