<%= content_for(:title, (t '.title')) %>

<h1><%= t '.title' %></h1>
<%= form_with(url: login_path, local: true) do |form| %>
    
    
    <div class="field">
      <%= form.label :email, User.human_attribute_name(:email) %><br/>
      <%= form.text_field :email %>
    </div>
  
    <div class="field">
      <%= form.label :password,User.human_attribute_name(:password) %><br/>
      <%= form.password_field :password %>
    </div>
  
    <div class="actions">
      <%= form.submit (t 'defaults.login')%>
    </div>
    <div class='text-center'>
      <%= link_to (t '.to_register_page'), new_user_path %>
      <%= link_to (t '.password_forget'),  new_password_reset_path %>
    </div>
<% end %>
  