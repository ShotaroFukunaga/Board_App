<%= content_for(:title, (t '.title')) %>

<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <%=render 'search_form', url: boards_path, search: @search%>
    </div>
  </div>
  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
       <%if @boards.present?%>
        <%= render @boards %>
        <%= paginate @boards, theme: 'twitter-bootstrap-4'%>
       <%else%>
        <h1><%= t '.no_boards'%></h1>
       <%end%>
      </div>
    </div>
  </div>
</div>