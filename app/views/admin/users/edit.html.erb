<%content_for :title, (t '.title')%>

<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <%= form_with model: @user, url: admin_user_path(@user), local: true do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <div class="form-group">
                    <%= f.label :first_name %><br/>
                    <%= f.text_field :first_name, class: 'form_control', size: '70x20' %>
            </div>
            <div class="form-group">
                <%= f.label :last_name %><br/>
                <%= f.text_field :last_name, class: 'form_control', rows: 10, size: '70x20'%>
            </div>
            <div class="form-group">
            <%= f.label :email %><br/>
            <%= f.text_field :email, class: 'form_control', rows: 10, size: '70x20'%>
            </div>
            <div class="form-group">
                <%=f.label :avatar%><br>
                <%=f.file_field :avatar, onchange: 'previewImage()', class: 'form_control mb-3', accept: 'image/*' %>
                <%=f.hidden_field :avatar_cache %>
            </div>
            <div class='mt-3 mb-3'>
            <%= image_tag @user.avatar.url,
                            id: 'preview',
                            class: 'rounded-circle',
                            size: '100x100'%>
            </div>
            <div class="form-group">
                <%=f.label :role %></br>
                <%=f.select :role, User.roles_i18n.invert, {}, class: 'form_control'%>
            </div>
                <%= f.submit class: 'btn btn-primary' %>
        <%end%>
    </div>
  </div>
</div>